<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/css/style.css" rel="stylesheet" type="text/css">
    <title>Edit Profile</title>
</head>

<body>
    <%- include("../components/header", isLoggedIn, user_id, profile_image) %> 
    <main>
        <%- include("../components/nav") %>
        <article>
            <article class="card__list">
                <div>
                    <section id="bagian-edit">
                    <form action="/users/<%= user.user_id %>/edit"  method="post" class="users-form card__profile">
                        <h2>Edit Profile</h2>
                        <label for="username">Username</label>
                        <input type="text" autocomplete="off" placeholder="Username" name="username" id="username" required value = "<%= user.username.slice(1).trim() %>"/>
                        
                        <% if (typeof errUser=='string' && errUser) { %>
                            <p class="users-form__error"><%= errUser %> </p>
                        <% } %>
            
                        <label for="name">Full Name</label>
                        <input type="text" autocomplete="off" placeholder="Full Name" name="name" id="name" required value = "<%= user.name.trim() %>"/>
                        <label for="email">Email</label>
                        <input type="text" autocomplete="off" placeholder="Email" name="email" id="email" required value = "<%= user.email.trim() %>"/>
                        
                        <% if (typeof errEmail=='string' && errEmail) { %>
                        <p class="users-form__error"><%= errEmail %> </p>
                        <% } %>
            
                        <button type="submit">Update</button>
                    </form>
                    <form action="/users/<%= user_id %>/profile/edit " method = "POST" class="users-form card__profile" role="form" enctype = "multipart/form-data" style = "margin-top: 50px;">
                        <h2>Edit Profile Picture</h2>
                        <% users.forEach(item => { %>
                            <% if (item.user_id == id) { %>
                                <% if (item.profile_image != '') { %>
                                    <img src="/images/<%= item.profile_image %>" alt="" width="250" height="250">
                                <% } else { %>
                                    <img src="/images/Unknown_person.jpg" alt="" width="250" height="250">
                                <% } %>
                            <% } %>
                        <% }) %>
                        <input type="file" name = "profile" accept = "image/*" type = "file" id="profile">
                        <button type = "submit">Upload</button>
                    </form>
                    </section>
                </div>
            </article>
        </article>
    </main>
    <%- include("../components/scripts_links") %>
</body>

</html>