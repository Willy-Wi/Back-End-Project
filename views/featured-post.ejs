<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../css/style.css">
    <title>Featured Post</title>
</head>

<body>
    <%- include("../components/header", isLoggedIn, user_id, profile_image) %>
    <main>
        <%- include("../components/nav") %>
        <section id="featured-post">
            <h2 class="featuring">Featured Post</h2>
            <div class="card__list">
                <% posts.forEach(item => { %>
                <% if (typeof likes == 'object' && likes) { %>
                <% let filtered = likes.filter((v) => { return v.post_id === item.post_id }) %>
                <% if (filtered.length > 0) { %>
                <% status = "Unlike" %>
                <% } else { %>
                <% status = "Like" %>
                <% } %>
                <% } else { %>
                <% status = "Like" %>
                <% } %>
                <div class="card card__post">
                    <div class="card__like">
                        <% if (typeof isLoggedIn == 'boolean' && isLoggedIn) { %>
                        <% if (status === "Unlike") { %>
                        <i class="fas fa-heart active" onclick="actOnPost(event)" data-post-id="<%= item.post_id %>"
                            data-post-status="<%= status %>"></i>
                        <% } else { %>
                        <i class="far fa-heart" onclick="actOnPost(event)" data-post-id="<%= item.post_id %>"
                            data-post-status="<%= status %>"></i>
                        <% } %>
                        <% } else { %>
                        <a href="/login"><i class="far fa-heart"></i></a>
                        <% } %>
                        <p id="likes-count-<%= item.post_id %>"><%= item.likes %></p>
                    </div>
                    <div class="card__content">
                        <div class="card__header">
                            <h3 style = "margin-right: auto;"><%= item.post_title %> </h3>
                            <% if (typeof isLoggedIn == 'boolean' && isLoggedIn) { %> 
                                <% if (item.user_id === user_id) { %>
                                    <div class="dropdown__comment">
                                        <i class="fa fa-ellipsis-v show-button" style = "margin-left: auto;"  role="button"
                                                onclick=<%='show(' +item.post_id+')' %>>
                                        </i>
                                        <div class="dropdown__menu" id="dropdown-<%= item.post_id %>">
                                            <a href = "/post/<%= item.post_id %>/report"><i class="fas fa-flag post__flag" role = "button"></i>&nbsp;Report Post</a>
                                            <a href = "/post/<%= item.post_id %>/edit"><i class="fas fa-edit" role = "button"></i>&nbsp;Edit Post</a>
                                            <a href = "#"><i class="far fa-trash-alt" role="button" onclick=<%='del(' + item.post_id +')' %>></i>&nbsp;Delete Post</a>
                                        </div>
                                    </div>
                                <% } else { %>
                                    <div class="dropdown__comment">
                                        <i class="fa fa-ellipsis-v show-button" style = "margin-left: auto;"  role="button"
                                                onclick=<%='show(' +item.post_id+')' %>>
                                        </i>
                                        <div class="dropdown__menu" id="dropdown-<%= item.post_id %>">
                                            <a href = "/post/<%= item.post_id %>/report"><i class="fas fa-flag post__flag" role = "button"></i>&nbsp;Report Post</a>
                                        </div>
                                    </div>
                                <% } %>
                            <% } %> 
                        </div>
                        <p><%= item.post_content %> </p>
                        <hr>
                        <div class="card__info">
                            <% if (item.profile_image == '') { %>
                            <img src="/images/Unknown_person.jpg" alt="" width="35" height="35">
                            <% } else { %>
                            <img src="/images/<%= item.profile_image %>" alt="" width="35" height="35">
                            <% } %>
                            <p>Posted by <a href="/users/<%= item.user_id %>"><%= item.username %> </a></p>
                            <a href="/posts/<%= item.post_id %>"><i class="far fa-comment-alt"></i></a>
                        </div>
                    </div>
                </div>
                <% }) %>
            </div>
        </section>
        <div><a class="createpost" href="/createpost">Create a New Post</a></div>
    </main>
    <%- include("../components/scripts_links.ejs") %>
    <script>
        let del = (id) => {
            axios.delete('/api/post/' + id)
                .then((result) => {
                    location.reload();
                }).catch((err) => {
                    alert('error ' + err)
                });
        };
        let show = (id) => {
            let dropdown = document.getElementById("dropdown-"+id);
            dropdown.classList.toggle("comment_menu--active");
            window.onclick = function(event){
                if (!event.target.matches(".show-button")) {
                    dropdown.classList.remove("comment_menu--active");
                }
            }
        };
    </script>
</body>

</html>